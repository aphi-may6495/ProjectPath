<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Food2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <ImageButton
                android:id="@+id/backBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:paddingLeft="10dp"
                android:paddingVertical="10dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_arrow_back_black_24dp"
                android:onClick="backMainFood"
                android:contentDescription="Back"/>
            <Space
                android:layout_width="240dp"
                android:layout_height="match_parent"/>
            <ImageButton
                android:id="@+id/favoriteBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:paddingLeft="10dp"
                android:paddingVertical="10dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/favorite"
                android:contentDescription="@string/title_fav"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="10dp"
            android:paddingLeft="40dp"
            android:onClick="showFood2">
            <fragment
                android:id="@+id/mapfood2"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="280dp"
                android:layout_height="170dp"
                android:onClick="showFood2"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:paddingTop="10dp">
            <TextView
                android:id="@+id/head_inStore2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/store_name2"
                android:textStyle="bold"
                android:textSize="25sp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/head_inStore2">
                <ImageView
                    android:id="@+id/star_rating2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_star_black_24dp"/>
                <TextView
                    android:id="@+id/rating2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:paddingVertical="5dp"
                    android:text="@string/rating2"
                    android:layout_toRightOf="@id/star_rating2"/>
                <TextView
                    android:id="@+id/reviewer2"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:paddingVertical="5dp"
                    android:text="@string/reviewer2"
                    android:layout_toRightOf="@id/rating2"/>
                <TextView
                    android:id="@+id/openH2"
                    android:layout_width="130dp"
                    android:layout_height="30dp"
                    android:paddingVertical="5dp"
                    android:text="@string/open_hour2"
                    android:layout_toRightOf="@id/reviewer2"/>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp">
            <TextView
                android:id="@+id/head_inStore2_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/location"
                android:textSize="22sp"
                android:textColor="@color/bg_border_orange"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/head_inStore2_1"
                android:paddingTop="3dp"
                android:text="@string/store2_lo"
                android:textSize="15sp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp">
            <TextView
                android:id="@+id/head_inStore2_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tel_number"
                android:textSize="22sp"
                android:textColor="@color/bg_border_orange"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/head_inStore2_2"
                android:paddingTop="3dp"
                android:text="@string/store2_num"
                android:textSize="15sp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp">
            <TextView
                android:id="@+id/head_inStore2_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/promotion"
                android:textSize="22sp"
                android:textColor="@color/bg_border_orange"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/head_inStore2_3"
                android:paddingTop="3dp"
                android:text="@string/store2_promotion"
                android:textSize="15sp"/>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#BEBEBE"/>
    <TextView
        android:id="@+id/head_inStore2_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:text="@string/photosnreviews"
        android:textSize="22sp"
        android:textColor="@color/bg_border_orange"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:paddingVertical="10dp"
        android:layout_marginHorizontal="10dp">
        <ImageView
            android:id="@+id/fImg1"
            android:layout_width="106dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:background="#BEBEBE"
            android:src="@drawable/food0201"/>
        <ImageView
            android:id="@+id/fImg2"
            android:layout_width="106dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10dp"
            android:background="#BEBEBE"
            android:src="@drawable/food0202"/>
        <ImageView
            android:id="@+id/fImg3"
            android:layout_width="106dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:background="#BEBEBE"
            android:text="See all"/>
    </LinearLayout>

    <Button
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="Read a Review"
        android:drawableEnd="@drawable/ovalet"/>

</LinearLayout>