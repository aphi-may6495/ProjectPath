<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Food1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <ImageButton
                android:id="@+id/backBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:paddingLeft="10dp"
                android:paddingVertical="10dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_arrow_back_black_24dp"/>
            <Space
                android:layout_width="240dp"
                android:layout_height="match_parent"/>
            <ImageButton
                android:id="@+id/favoriteBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:paddingLeft="10dp"
                android:paddingVertical="10dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/favorite"/>
        </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginVertical="10dp"
                android:onClick="showFood1">
                <fragment
                    android:id="@+id/mapfood1"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="280dp"
                    android:layout_height="170dp"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:paddingTop="10dp">
                <TextView
                    android:id="@+id/head_inStore1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/store_name1"
                    android:textStyle="bold"
                    android:textSize="25sp"/>
                <RelativeLayout
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/head_inStore1">
                    <ImageView
                        android:id="@+id/star_rating1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_star_black_24dp"/>
                    <TextView
                        android:id="@+id/rating1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:paddingVertical="5dp"
                        android:text="@string/rating"
                        android:layout_toRightOf="@id/star_rating1"/>
                    <TextView
                        android:id="@+id/reviewer1"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:paddingVertical="5dp"
                        android:text="@string/reviewer"
                        android:layout_toRightOf="@id/rating1"/>
                    <TextView
                        android:id="@+id/openH"
                        android:layout_width="130dp"
                        android:layout_height="30dp"
                        android:paddingVertical="5dp"
                        android:text="@string/open_hour"
                        android:layout_toRightOf="@id/reviewer1"/>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingStart="15dp"
                android:paddingEnd="15dp">
                <TextView
                    android:id="@+id/head_inStore1_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/location"
                    android:textSize="22sp"
                    android:textColor="@color/bg_border_orange"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/head_inStore1_1"
                    android:paddingTop="3dp"
                    android:text="@string/store1_lo"
                    android:textSize="15sp"/>
            </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp">
            <TextView
                android:id="@+id/head_inStore1_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tel_number"
                android:textSize="22sp"
                android:textColor="@color/bg_border_orange"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/head_inStore1_2"
                android:paddingTop="3dp"
                android:text="@string/store1_num"
                android:textSize="15sp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp">
            <TextView
                android:id="@+id/head_inStore1_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/promotion"
                android:textSize="22sp"
                android:textColor="@color/bg_border_orange"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/head_inStore1_3"
                android:paddingTop="3dp"
                android:text="@string/store1_promotion"
                android:textSize="15sp"/>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#BEBEBE"/>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vpfood1"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="80dp"
        android:layout_marginStart="80dp"
        android:clickable="true"
        android:focusable="true"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:layout_marginTop="20dp"
        android:text="Read a Review"
        android:drawableEnd="@drawable/ovalet"/>

</LinearLayout>