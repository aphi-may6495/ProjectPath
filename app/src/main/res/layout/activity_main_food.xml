<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BEBEBE">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="30dp"
        android:paddingBottom="30dp">

        <LinearLayout
            android:id="@+id/store1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="25dp"
            android:orientation="vertical"
            android:focusable="true"
            android:clickable="true"
            android:background="#ffffff"
            android:onClick="toFood1">

            <ImageView
                android:id="@+id/image1"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#6D6D6D"
                android:src="@drawable/food0101">
            </ImageView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:id="@+id/head_textStore1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/store_name1"
                    android:textStyle="bold"
                    android:textSize="22sp"/>
                <RelativeLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/head_textStore1">
                    <ImageView
                        android:id="@+id/star_rating1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_star_black_24dp"/>
                    <TextView
                        android:id="@+id/rating1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:paddingVertical="5dp"
                        android:text="@string/rating"
                        android:layout_toRightOf="@id/star_rating1"/>
                    <TextView
                        android:id="@+id/reviewer1"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:paddingVertical="5dp"
                        android:text="@string/reviewer"
                        android:layout_toRightOf="@id/rating1"/>
                    <TextView
                        android:id="@+id/dist"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:paddingVertical="5dp"
                        android:text="@string/distance"
                        android:layout_toRightOf="@id/reviewer1"/>
                </RelativeLayout>
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/favorite"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/store2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="25dp"
            android:orientation="vertical"
            android:focusable="true"
            android:clickable="true"
            android:background="#ffffff"
            android:onClick="toFood2">

            <ImageView
                android:id="@+id/image2"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#6D6D6D"
                android:src="@drawable/food0201">
            </ImageView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:id="@+id/head_textStore2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/store_name2"
                    android:textStyle="bold"
                    android:textSize="22sp"/>
                <RelativeLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/head_textStore2">
                    <ImageView
                        android:id="@+id/star_rating2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_star_black_24dp"/>
                    <TextView
                        android:id="@+id/rating2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:paddingVertical="5dp"
                        android:text="@string/rating2"
                        android:layout_toRightOf="@id/star_rating2"/>
                    <TextView
                        android:id="@+id/reviewer2"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:paddingVertical="5dp"
                        android:text="@string/reviewer2"
                        android:layout_toRightOf="@id/rating2"/>
                    <TextView
                        android:id="@+id/dist2"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:paddingVertical="5dp"
                        android:text="@string/distance2"
                        android:layout_toRightOf="@id/reviewer2"/>
                </RelativeLayout>
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/favorite"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/store3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="25dp"
            android:orientation="vertical"
            android:focusable="true"
            android:clickable="true"
            android:background="#ffffff"
            android:onClick="toFood3">

            <ImageView
                android:id="@+id/image3"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#6D6D6D"
                android:src="@drawable/food0301">
            </ImageView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:id="@+id/head_textStore3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/store_name3"
                    android:textStyle="bold"
                    android:textSize="22sp"/>
                <RelativeLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/head_textStore3">
                    <ImageView
                        android:id="@+id/star_rating3"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_star_black_24dp"/>
                    <TextView
                        android:id="@+id/rating3"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:paddingVertical="5dp"
                        android:text="@string/rating3"
                        android:layout_toRightOf="@id/star_rating3"/>
                    <TextView
                        android:id="@+id/reviewer3"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:paddingVertical="5dp"
                        android:text="@string/reviewer3"
                        android:layout_toRightOf="@id/rating3"/>
                    <TextView
                        android:id="@+id/dist3"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:paddingVertical="5dp"
                        android:text="@string/distance3"
                        android:layout_toRightOf="@id/reviewer3"/>
                </RelativeLayout>
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/favorite"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>

        </LinearLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="100dp"/>

    </LinearLayout>
</ScrollView>